<div class="container">
	<div class="row">
		<div class="col-xs-2">
		</div>
		<div class="col-xs-3">
			<h3>
				注文履歴一覧
			</h3>
		</div>
	</div>
	<div class="row" style="margin: 30px 0 0 0;">
		<div class="col-xs-2">
		</div>
		<div class="col-xs-8">
			<table class="table table-hover table-inverse">
				<thead>
					<tr style="background-color: #EEEEEE;">
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td>
							<%= link_to admin_order_path(order) do %>
								<%= order.created_at %>
							<% end %>
						</td>
						<td>
							<%= order.end_user.last_name %><%= order.end_user.first_name %>
						</td>
						<td>
							<% sum = 0 %>
							<% order.order_details.each do |order_detail| %>
								<% sum += order_detail.quantity %>
							<% end %>
							<%= sum %>
						</td>
						<td>
							<%= order.status %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>