<%= form_with model: @item, url: admin_items_path, method: :post, data: {remote: :false} do |f| %>
    <div class="container">
      <div class="row">
          <div class="col-xs-2"></div>
          <div class="col-xs-3">
             <h3>商品新規登録</h3>
          </div>
      </div>
      <div class="row">
        <div class="col-xs-3">
          <div class="form-group">
              <%= f.attachment_field :image, class: "form-control" %>
          </div>
        </div>
        <div class="form-horizontal col-xs-6">
          <div class="form-group">
              <label class="col-sm-3 control-label">商品名</label>
              <div class="col-sm-8"><%= f.text_field :name, class: "form-control" %></div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">商品説明</label>
              <div class="col-sm-8"><%= f.text_area :description, class: "form-control" %></div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">ジャンル</label>
              <div class="col-sm-8">
                <%= f.collection_select :genre_id, @genre.all, :id, :name, :prompt => "選択してくだいさい" %>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">税抜価格</label>
              <div class="col-sm-8"><%= f.text_field :price, class: "form-control" %></div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">販売<br>ステータス</label>
              <div class="col-sm-8">
                <%= f.select :sales_status, [['売り切れ','売り切れ'], ['販売中', '販売中']], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
              </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10"></div>
        <div class="col-xs-1　btn btn-default">
          <%= f.submit "新規登録" %>
        </div>
      </div>
    </div>
<% end %>