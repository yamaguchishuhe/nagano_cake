<div class="container">
	<div class="row">
		<div class="col-xs-9">
		</div>
		<div class="col-xs-3">
			
			<ul>
			  <% @item.each do |item| %>
				  <li style="list-style: none">
				    <%= link_to item.name, item %>
				    <%= item.created_at %>
				  </li>
			  <% end %>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-3">
			<h3>商品一覧</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-9"></div>
		<div class="col-xs-1">
			<%= link_to '商品新規', new_admin_item_path, class: 'btn btn-default' %>
		</div>
	</div>
	<div class="row" style="margin: 30px 0 0 0;">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<table class="table table-hover table-inverse">
				<thead>
					<tr style="background-color: #EEEEEE;">
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @items.each do |item| %>
					<tr>
						<td>
							<%= item.id %>
						</td>
						<td>
							<%= item.name %>
						</td>
						<td>
							<%= item.price %>
						</td>
						<td>
							<%= item.genre.name %>
						</td>
						<td>
							<%= item.sales_status %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>