<div class="container">
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-9">
			<h3>ジャンル一覧・追加</h3>
		</div>
	</div>
	<div class="row" style="margin: 40px 0 0 0;">
		<div class="col-xs-1"></div>
		<%= form_for(@genre, url: admin_genres_path) do |f| %>
				<div class="form-inline">
					<div class="form-group">
						<label>ジャンル</label>
						 <%= f.text_field :name %>
					</div>
					<div class="form-group">
						  <%= f.radio_button :is_active, :true %>
						  <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
						  <%= f.radio_button :is_active, :false %>
						  <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
					</div>
					<%= f.submit "追加", class: "btn btn-primary" %>
				</div>
		<% end %>
	</div>
	<div class="row" style="margin: 40px 0 0 40px;">
		<div class="col-xs-5">
			<table class="table table-hover table-inverse">
				<thead>
					<tr style="background-color: #EEEEEE;">
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%= genre.name %>
						</td>
						<td>
							<% if genre.is_active == false %>
								無効
							<% else %>
								有効
							<% end %>
						</td>
						<td>
							<%= link_to ' 編集する', edit_admin_genre_path(genre), class: 'btn btn-primary' %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
