<div class="container"> 
      <div class="row"> 
                <h2>Sign up</h2>

                <%= form_for(resource, as: resource_name, url: end_users_path) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                                  <div class="row">
                                       <div class="field">
                                          <div class="col-xs-2">
                                              <%= f.label :名前 %>
                                          </div>
                                          <div class="col-xs-1">
                                              <%= f.label :（姓） %>
                                          </div>
                                          <div class="col-xs-3">
                                               <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
                                          </div>
                                        </div>

                                      <div class="field">
                                            <div class="col-xs-1">
                                              <%= f.label :（名） %>
                                            </div>
                                              <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                          <div class="col-xs-2">
                                             <%= f.label :フリガナ %>
                                          </div>
                                          <div class="col-xs-1">
                                             <%= f.label :（セイ） %>
                                          </div>
                                          <div class="col-xs-3">
                                             <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
                                          </div>
                                      </div>

                                      <div class="field">
                                              <div class="col-xs-1">
                                                <%= f.label :（メイ） %>
                                              </div>
                                                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                        <div class="col-xs-3">
                                            <%= f.label :メールアドレス %>
                                        </div>
                                        <div class="col-xs-3">
                                             <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
                                        </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                          <div class="col-xs-3">
                                              <%= f.label :郵便番号（ハイフンなし） %>
                                          </div>
                                          <div class="col-xs-3">
                                              <%= f.text_field :postcode, autofocus: true, autocomplete: "email" %>
                                          </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                        <div class="col-xs-3">
                                           <%= f.label :住所 %>
                                        </div>
                                        <div class="col-xs-3">
                                           <%= f.text_field :user_address, autofocus: true, autocomplete: "email" %>
                                        </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                        <div class="col-xs-3">
                                            <%= f.label :電話番号（ハイフンなし） %>
                                        </div>
                                        <div class="col-xs-3">
                                            <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %>
                                        </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                            <div class="col-xs-3">
                                                <%= f.label :パスワード %>
                                                <% if @minimum_password_length %>
                                                <em>(<%= @minimum_password_length %> 文字以内)</em>
                                                <% end %>
                                            </div>
                                            <div class="col-xs-3">
                                              <%= f.password_field :password, autocomplete: "new-password" %>
                                            </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="field">
                                          <div class="col-xs-3">
                                            <%= f.label :パスワード（確認用） %>
                                          </div>
                                          <div class="col-xs-3">
                                             <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                                          </div>
                                      </div>
                                  </div>

                                  <div class="row">
                                    <div class="col-xs-5">
                                    </div>
                                    <div class="col-xs-7">
                                      <div class="actions">
                                        <%= f.submit "新規登録", class: "btn btn-success active btn2" %>
                                      </div>
                                    </div>
                                  </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
  </div>  
</div>  
